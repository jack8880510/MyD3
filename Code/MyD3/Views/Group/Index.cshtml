@{
    ViewBag.Module = "分组管理";
    ViewBag.Title = "分组列表";
    ViewBag.Desceiption = "维护系统中的分组，包括基本信息，状态，授权，人员等等";
    Layout = "~/Views/Shared/Base/_Layout.cshtml";
}

@section button_list{
    <button class="btn btn-success btn-icon-text btn-add-group">
        <i class="zmdi zmdi-plus"></i>
        新增分组
    </button>
}

<script type="text/x-jsrender" id="cmd-tpl">
    <button type='button' class='btn btn-sm bgm-cyan btn-icon command-edit' title="编辑" data-row-id='{{>ID}}' data-row-name='{{>Name}}'><span class='zmdi zmdi-edit'></span></button>
    <button type='button' class='btn btn-sm bgm-green btn-icon command-authoriz' title="授权管理" data-row-id='{{>ID}}' data-row-name='{{>Name}}'><span class='zmdi zmdi-key'></span></button>
    <button type='button' class='btn btn-sm bgm-green btn-icon command-members' title="成员管理" data-row-id='{{>ID}}' data-row-name='{{>Name}}'><span class='zmdi zmdi-accounts'></span></button>
    <button type='button' class='btn btn-sm bgm-red btn-icon command-delete' title="删除" data-row-id='{{>ID}}' data-row-name='{{>Name}}'><span class='zmdi zmdi-delete'></span></button>
</script>

<table id="data-table-command" class="table table-striped table-vmiddle">
    <thead>
        <tr>
            <th data-column-id="ID" data-identifier="true" data-visible="false">系统编号</th>
            <th data-column-id="Name" data-sortable="true">名称</th>
            <th data-column-id="CreateDate" data-formatter="datetime" data-sortable="true">创建时间</th>
            <th data-column-id="commands" data-formatter="commands" data-sortable="false">操作</th>
        </tr>
    </thead>
</table>

@section scripts{
    <!-- Data Table -->
    <script type="text/javascript">
        $(function () {
            $(".btn-add-group").on("click", btnAddGroup_click);

            $("#data-table-command").bootgrid({
                ajax: true,
                url: '@Url.Action("Search")',
                post: function () {
                    return {

                    };
                },
                css: {
                    icon: 'zmdi icon',
                    iconColumns: 'zmdi-view-module',
                    iconDown: 'zmdi-expand-more',
                    iconRefresh: 'zmdi-refresh',
                    iconUp: 'zmdi-expand-less'
                },
                labels: {
                    all: "全部",
                    infos: "显示 {{ctx.start}} 到 {{ctx.end}} 条 共 {{ctx.total}} 条结果",
                    loading: "查询中...",
                    noResults: "没有符合套件的结果",
                    refresh: "刷新",
                    search: "搜索"
                },
                formatters: {
                    "commands": function (column, row) {
                        var args = {
                            ID: row.ID,
                            Name: row.Name
                        };

                        return $("#cmd-tpl").render(args);
                    },
                    "datetime": function (column, row) {
                        var value = moment(row.CreateDate);
                        return value.format("YYYY-MM-DD HH:mm:ss");
                    },
                }
            }).on("loaded.rs.jquery.bootgrid", function () {
                $(this).find(".command-edit").on("click", btnEditGroup_click)
                .end().find(".command-delete").on("click", btnDeleteGroup_click)
                .end().find(".command-authoriz").on("click", btnAuthoriz_click)
                .end().find(".command-members").on("click", btnMembers_click);

                //权限处理
                jackTool.security.parse();
            });
        });

        /**
        * 新增分组按钮点击事件
        */
        function btnAddGroup_click(e) {
            //以新增方式打开
            dialog_new();
        }

        /**
        * 分组授权按钮点击事件
        */
        function btnAuthoriz_click(e) {
            var group_id = $(this).data("row-id");

            //从服务器获取分组授权信息
            jackTool.tools.net.get("@Url.Action("GetGroupAuthorization", "Authorization")" + "/" + group_id, function (result) {
                if (result && result.RCode == 0) {
                    //注入ID属性
                    result.Data.ID = group_id;

                    //调用AuthorizationPartialPage中的方法打开对话框进行授权
                    dialog_authoriz(result.Data, "@Url.Action("GroupAuthoriz", "Authorization")");
                } else {
                    swal({
                        title: "失败",
                        text: result ? result.RMsg : "获取授权信息失败",
                        type: "error",
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
            });
        }

        /**
        * 编辑分组按钮点击事件
        */
        function btnEditGroup_click(e) {
            var group_id = $(this).data("row-id");
            dialog_edit(group_id);
        }

        /**
        * 分组成员按钮点击事件
        */
        function btnMembers_click(e) {
            var group_id = $(this).data("row-id");
            dialog_members(group_id);
        }

        /**
        * 删除分组按钮点击事件
        */
        function btnDeleteGroup_click(e) {
            var group_name = $(this).data("row-name");
            var group_id = $(this).data("row-id");

            swal({
                title: "请确认",
                text: "确定要删除该分组 " + group_name + " 么？",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "删除!",
                cancelButtonText: "返回",
                closeOnConfirm: false,
                closeOnCancel: true
            }, function (isConfirm) {
                if (isConfirm) {
                    jackTool.tools.net.delete("@Url.Action("Delete")", { ID: group_id }, function (result) {
                        if (!result || result.RCode != 0) {
                            swal({
                                title: "删除失败",
                                text: result.RMsg,
                                type: "error",
                                showConfirmButton: false,
                                timer: 2000
                            });
                        } else {
                            swal({
                                title: "成功",
                                text: "分组删除成功",
                                type: "success",
                                showConfirmButton: false,
                                timer: 2000
                            });
                            $("#data-table-command").bootgrid("reload");
                        }
                    });
                }
            });
        }
    </script>
}

@Html.Partial("~/Views/Shared/Security/AuthorizationPartialPage.cshtml")
@Html.Partial("~/Views/Group/GroupEditPartial.cshtml")
@Html.Partial("~/Views/Group/GroupMemberPartial.cshtml")
